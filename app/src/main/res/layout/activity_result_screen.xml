<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/wood"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultScreen">

    <TextView
        android:id="@+id/ResultToShow"
        android:layout_width="90pt"
        android:layout_height="20pt"
        android:textSize="10pt"
        android:textColor="#ffffff"
        android:text="Result"/>

    <Button
        android:id="@+id/startAgain"
        android:layout_width="60pt"
        android:layout_height="20pt"
        android:layout_below="@+id/ResultToShow"
        android:onClick="startBut"
        android:text="Start aGain" />

    <Button
        android:id="@+id/FinishGame"
        android:layout_width="60pt"
        android:layout_height="20pt"
        android:layout_below="@+id/startAgain"
        android:onClick="finishBut"
        android:text="Finish Game" />

</RelativeLayout>